@{
}
@model List<First_Web_Application.Models.Entity.Student>
<h1>Students</h1>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Email</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var student in Model)
        {
            <tr>
                <td>@student.ID</td>
                <td>@student.Name</td>
                <td>@student.Email</td>
                <td>
                    <a class="btn btn-primary" asp-controller="Student" asp-action="Edit" asp-route-ID="@student.ID">Edit</a>
                </td>
           
            </tr>    
        }
    </tbody>
</table>